@using Models;
@using Services;

@page "/categorias"

@inject ICaracteristicasGameService CaracteristicasGamesService;

        <h1 class="text-center display-4">Categorias</h1>

<div class="container-fluid">
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row">
                @foreach (var item in caracteristicasGames)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="rounded overflow-hidden mb-2">
                            <div class="cat-item position-relative overflow-hidden rounded mb-2">
                                <img class="img-fluid" src="@item.Img">

                            </div>
                            <div class="bg-secondary p-4">
                                <div class="d-flex justify-content-between mb-3">
                                    <small class="m-0"><i class="bi bi-bookmark-star-fill"></i> Juegos  </small>
                                    <h6 class="m-0">@item.Plataforma </h6>
                                    <small class="m-0"><i class="bi bi-calendar-check"></i> @item.Fecha </small>
                                </div> 
                                <div class="border-top h-1 mt-4 pt-4">
                                    <div class="d-flex justify-content-between">
                                        <a href="@item.Version" class="h4"><i class="bi bi-joystick"></i>@item.Nombre </a>
                                    </div>
                                </div>
                                 <div class="border-top h-1 mt-4 pt-4">
                                    <div class="d-flex justify-content-between">
                                     <h5 class="m-0"><i></i>- @item.Plataforma</h5>
                                    </div>
                                </div>
                                <div class="border-top h-1 mt-4 pt-4">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="m-0"><i></i>- @item.Genero</h5>
                                    </div>
                                </div>
                                <div class="border-top h-1 mt-4 pt-4">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="m-0"><i></i>- @item.size</h5>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <a href="@item.Version" class="btn btn-primary py-md-2 px-md-4 font-weight-semi-bold mt-2"><i class="bi bi-cart-check-fill"></i> Descargar</a>
                                </div>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>

</div>

@code {
    IEnumerable<CaracteristicasGames> caracteristicasGames = new List<CaracteristicasGames>();

    protected override async Task OnInitializedAsync()
    {
        caracteristicasGames = await CaracteristicasGamesService.GetAll();
    }
}
