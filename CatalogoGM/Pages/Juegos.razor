@if (caracteristicasGames == null)
{
    <h1>Cargando...</h1>
}
else
{
    <div class="container-fluid">
        <div class="container-fluid py-5">
            <div class="container py-5">
                <div class="row">
                    @foreach (var item in caracteristicasGames)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="rounded overflow-hidden mb-2" >
                                <div class="cat-item position-relative overflow-hidden rounded mb-2">
                                    <img class="img-fluid" src="@item.Img">

                                </div>
                                <div class="bg-secondary p-4">
                                    <div class="d-flex justify-content-between mb-3">
                                        <small class="m-0"><i class="bi bi-bookmark-star-fill"></i> Juegos  </small>
                                        <small class="m-0"><i class="bi bi-calendar-check"></i> @item.Fecha </small>
                                        <h5 class="m-0"><i class="bi bi-coin"></i> Gratis</h5>
                                    </div>
                                    <a href="/categorias" class="h5">@item.Nombre </a>
                                    <div class="d-flex justify-content-center">
                                        <a href="/categorias" class="btn btn-primary py-md-2 px-md-4 font-weight-semi-bold mt-2"><i class="bi bi-cart-check-fill"></i> Caracteristicas</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
}


@code {
    IEnumerable<CaracteristicasGames> caracteristicasGames = new List<CaracteristicasGames>();

    protected override async Task OnInitializedAsync()
    {
        caracteristicasGames = await CaracteristicasGamesService.GetAll();
    }
}
