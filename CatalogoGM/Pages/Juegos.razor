@using Models;
@using Services;
@page "/juegos"

@inject ICaracteristicasGameService CaracteristicasGamesService;


<main>
    <section class="Juegos">
        <div class="contenedor">
            <h2 class="titulo">Categorias</h2>
            <div class="galeria-port">
                <a href="accion.html" class="imagen-port">
                    <img src="image/accion.jpg" alt="">
                    <div class="hover-galeria">
                        <img src="image/icono1.png" alt="">
                        <p>Accion</p>
                    </div>
                </a>
                <a href="aventura.html" class="imagen-port">
                    <img src="image/aventura.jpg" alt="">
                    <div class="hover-galeria">
                        <img src="image/icono1.png" alt="">
                        <p>Aventura</p>
                    </div>
                </a>
                <a href="deportes.html" class="imagen-port">
                    <img src="image/deportes.jpg" alt="">
                    <div class="hover-galeria">
                        <img src="image/icono1.png" alt="">
                        <p>Deportes</p>
                    </div>
                </a>
                <a href="estrategia.html" class="imagen-port">
                    <img src="image/estrategia.jpg" alt="">
                    <div class="hover-galeria">
                        <img src="image/icono1.png" alt="">
                        <p>Estrategia</p>
                    </div>
                </a>
                <a href="simuladores.html" class="imagen-port">
                    <img src="image/simulador.jpg" alt="">
                    <div class="hover-galeria">
                        <img src="image/icono1.png" alt="">
                        <p>Simuladores</p>
                    </div>
                </a>
                <a href="conduccion.html" class="imagen-port">
                    <img src="image/conduccion.jpg" alt="">
                    <div class="hover-galeria">
                        <img src="image/icono1.png" alt="">
                        <p>Conduccion</p>
                    </div>
                </a>
                <a href="RPG.html" class="imagen-port">
                    <img src="image/RPG.jpg" alt="">
                    <div class="hover-galeria">
                        <img src="image/icono1.png" alt="">
                        <p>RPG</p>
                    </div>
                </a>
                <a href="otros.html" class="imagen-port">
                    <img src="image/otros.jpg" alt="">
                    <div class="hover-galeria">
                        <img src="image/icono1.png" alt="">
                        <p>Otros</p>
                    </div>
                </a>
            </div>
        </div>
    </section>
</main>




@if (caracteristicasGames == null)
{
    <h1>Cargando...</h1>
}
else
{
    <div class="container-fluid">
        <div class="container-fluid py-5">
            <div class="container py-5">
                <div class="row">
                    @foreach (var item in caracteristicasGames)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="rounded overflow-hidden mb-2" @* data-page="@numPage" *@>
                                <div class="cat-item position-relative overflow-hidden rounded mb-2">
                                    <img class="img-fluid" src="image/games.png">

                                </div>
                                <div class="bg-secondary p-4">
                                    <div class="d-flex justify-content-between mb-3">
                                        <small class="m-0"><i class="bi bi-bookmark-star-fill"></i> Juegos  </small>
                                        <small class="m-0"><i class="bi bi-calendar-check"></i> @item.Fecha </small>
                                    </div>
                                    <small class="m-0"><i class="far fa-clock text-primary mr-2"></i>@item.Version </small>
                                    <h6 class="m-0"><i class="bi bi-person-video2"></i> @item.Formato autor</h6>
                                    <a href="@* /CursoEstudiante/Details/@item.Id *@" class="h5">@item.Nombre </a>
                                    <div>
                                        <h6 class="m-0"><small><i class="bi bi-check-circle"></i> @item.Plataforma </small></h6>
                                        <h6 class="m-0"><small><i class="bi bi-check-circle"></i> @item.size </small></h6>
                                    </div>
                                    <div class="border-top mt-4 pt-4">
                                        <div class="d-flex justify-content-between">
                                            <h6 class="m-0">Antes: <del> @item.tipoGenrosId</del> </h6>
                                            <h5 class="m-0"><i class="bi bi-coin"></i> Gratis</h5>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <a href="@item.Genero" class="btn btn-primary py-md-2 px-md-4 font-weight-semi-bold mt-2"><i class="bi bi-cart-check-fill"></i> Descargar</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
}


@code {
    IEnumerable<CaracteristicasGames> caracteristicasGames = new List<CaracteristicasGames>();

    protected override async Task OnInitializedAsync()
    {
        caracteristicasGames = await CaracteristicasGamesService.GetAll();
    }
}
